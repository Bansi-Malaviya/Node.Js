<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>view Task</title>

</head>
<style>
    body {  
        font-family: Arial, Helvetica, sans-serif;
    }
    h1,h2 {
        text-align: center;

    }

    table {
        border-collapse: collapse;
    }

    thead {
        background-color: #cfe2ff;
    }

    table,
    th,
    td {
        border: 1px solid black;
    }

    th,
    td {
        padding: 15px 0 15px 2px;
        text-align: left;
    }

    .container {
        display: flex;
        justify-content: space-between;
    }

    .add-task {
        width: 25%;
        margin-right: 20px;
    }

    form {
        text-align: left    ;
        display: flex;
        background-color: #f8f9fa;
        padding: 20px;
        flex-direction: column;
        }

    input {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ced4da;
    }
    label {
        margin-bottom: 10px;
    }
</style>

<body>
    <h1 style="margin-bottom: 4%;">Todo List</h1>
    <div class="container">
        <div class="view-task" align="center">
            <h2>Todo List</h2>
            <table width="200%" style="margin-left: 1%;">
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Status</th>
                        <th>Deadline</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody style="border: 1px solid black;">
                    <% record.map((val, i)=> { %>
                        <tr>
                        
                            <td>
                                <%= val.task %>
                            </td>
                            <td>
                                <%= val.status %>
                            </td>
                            <td>
                                <%= val.deadline %>
                            <td>
                                <a href="/edituser?id=<%= val.id %>" style="background-color: #0d6efd; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;">Edit</a>
                                <a href="/deleteuser?deleteId=<%= val.id %>" style="background-color: red; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none;" class="btn btn-danger">Delete</a>
                              
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>


        <!-- add user form  -->
        <div class="add-task" align="center">
            <h2>Add Task</h2>
            <form method="post" action="/adduser">
                <form>
                    <label for="Task">Task: </label>
                    <input type="text" name="usertask" id="Task" placeholder="Enter Task" required><br>
                    
                    <label for="status">Status: </label>
                    <input type="text" name="userstatus" id="status" placeholder="Enter Status" required><br>
                    
                    <label for="deadline">Deadline: </label>
                    <input type="date" name="userdeadline"  required>
                    <br>
                    <br>
                    <input type="submit" value="Add Task" style="color: white; background-color: #198754; padding: 10px 0; text-decoration: none; border: 0; width: 30%; border-radius: 10px;">
                </form>
            </form>
        </div>
        <!-- add user form  -->
          
    </div>
</body>